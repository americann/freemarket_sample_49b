.business-wrapper
  = render 'shared/header'
  = render 'shared/breadcrumbs'

  .business-wrapper__side
  = render "shared/side_bar"

  .business-wrapper__main
    .business-wrapper__main__text 出品した商品
    %ul.business-wrapper__main__list
      %li.business-wrapper__main__list__ele1
        =link_to "出品する" , exhibit_user_path(current_user) ,class: "business-wrapper__main__list__ele1__link"
      %li.business-wrapper__main__list__ele2
        =link_to "取引中" , business_user_path(current_user) ,class: "business-wrapper__main__list__ele2__link"
      %li.business-wrapper__main__list__ele3
        =link_to "売却済み" , finish_user_path(current_user) ,class: "business-wrapper__main__list__ele3__link"
    .business-wrapper__main__index

      - unless @products.empty?
        .exhibit-wrapper__main__image
        %br
        %br
        %br
        = image_tag("#{asset_path "user/logo-gray.png"}",class:"business-image")
        %br
        %h1.exhibit-wrapper__main__text 取引中の商品はありません
        %br
        %br
      - else
        - @products.each do | product |
          .business-wrapper__main__index__name
          =link_to detail_user_path(product.id) , class:"business-link" do
            = product.name

  = render 'shared/footer'