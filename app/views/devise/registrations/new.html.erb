<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :ニックネーム %> <br />
    <%= f.text_field :nickname, placeholder: '例）メルカリ太郎' %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, placeholder:'PC・携帯どちらでも可' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
   
    <%= f.password_field :password, placeholder:'６文字以上' %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, placeholder:'６文字以上' %>
  </div>


  <div class="field">
    <%= f.label :お名前（全角） %><br />
    <%= f.text_field :firstname, placeholder:'例）山田' %>
  
    
    <%= f.text_field :lastname, placeholder:'例）絢' %>
  </div>

  <div class="field">
    <%= f.label :お名前カナ（全角）%><br />
    <%= f.text_field :firstname_kana, placeholder:'例）ヤマダ' %>
  
    <%= f.text_field :lastname_kana, placeholder:'例）アヤ' %>
  </div>

  <div class="field">
    <%= f.label :生年月日%><br />
  

    <%= f.date_select(
          :birthday,          
          use_month_numbers: true, # jan, febとかじゃなくて数字で月を表現
          start_year:     1930, # 何年から表示させるか
          end_year:       (Time.now.year), # 何年まで表示させるか
          default:        Date.new(1989, 1, 1), # 最初に表示されている年月日
          date_separator: '') # 年月日を仕切る文字
   %>

  

  <div><%= f.fields_for :address do |address_form| %>
    <%= address_form.label :郵便番号 %><br />
    <%= address_form.number_field :zip_code, placeholder:'例）123ー4567' %><br />


    <%= address_form.label :都道府県 %><br />
    <%= address_form.collection_select :prefecture_id, Prefecture.all, :id, :name %><br />

    <%= address_form.label :市区町村 %><br />
    <%= address_form.text_field :city , placeholder:'例）横浜市緑区'%><br />

    <%= address_form.label :番地 %><br />
    <%= address_form.text_field :block , placeholder:'例）青山1-1-1'%><br />

    <%= address_form.label :建物名 %><br />
    <%= address_form.text_field :building_number , placeholder:'例）柳ビル103'%><br />

    <%= address_form.label :電話 %><br />
    <%= address_form.number_field :phone_number , placeholder:'例）09012345678'%><br />

    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "次へ進む" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>