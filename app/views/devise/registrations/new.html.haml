= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :ニックネーム
    %br/
    = f.text_field :nickname, placeholder: '例）メルカリ太郎'
  .field
    = f.label :メールアドレス
    %br/
    = f.email_field :email, placeholder:'PC・携帯どちらでも可'
  .field
    = f.label :パスワード
    %br/
    = f.password_field :password, placeholder:'６文字以上'
  .field
    = f.label :パスワード（確認）
    %br/
    = f.password_field :password_confirmation, placeholder:'６文字以上'
  .field
    = f.label :お名前（全角）
    %br/
    = f.text_field :firstname, placeholder:'例）山田'
    = f.text_field :lastname, placeholder:'例）絢'
  .field
    = f.label :お名前カナ（全角）
    %br/
    = f.text_field :firstname_kana, placeholder:'例）ヤマダ'
    = f.text_field :lastname_kana, placeholder:'例）アヤ'
  .field
    = f.label :生年月日
    %br/
    = raw sprintf(                          |
      f.date_select(                        |
      :birthday,                            |
      use_month_numbers: true,              |
      start_year:     1930,                 |
      end_year:       (Time.now.year),      |
      default:        Date.new(1989, 1, 1), |
      date_separator:    '%s'),             |
      '年','月')+ '日'                         |
  %div
    = f.fields_for :address do |address_f|
      = address_f.label :郵便番号
      %br/
      = address_f.text_field :zip_code, placeholder:'例）123ー4567'
      %br/
      = address_f.label :都道府県
      %br/
      = address_f.collection_select :prefecture_id, Prefecture.all, :id, :name
      %br/
      = address_f.label :市区町村
      %br/
      = address_f.text_field :city , placeholder:'例）横浜市緑区'
      %br/
      = address_f.label :番地
      %br/
      = address_f.text_field :block , placeholder:'例）青山1-1-1'
      %br/
      = address_f.label :建物名
      %br/
      = address_f.text_field :building_number , placeholder:'例）柳ビル103'
      %br/
      = address_f.label :電話
      %br/
      = address_f.telephone_field :phone_number , placeholder:'例）09012345678'
      %br/
  %div
    = f.fields_for :card do |card_f|
      = card_f.label :カード番号
      %br/
      = card_f.text_field :card_number, placeholder:'半角数字のみ'
      %br/
      = card_f.label :カード番号
      %br/
      = card_f.date_select(             |
        :expiration_date,               |
        discard_day: true,              |
        start_year: Date.today.year,    |
        end_year: (Date.today.year+10), |
        use_month_numbers: true )       |
      %br/
      = card_f.label :セキュリティコード
      %br/
      = card_f.text_field :card_number, placeholder:'カード背面4桁もしくは3桁の番号'
      %br/
  .actions
    = f.submit "次へ進む"
= render "devise/shared/links"
